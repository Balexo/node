<%- include("header.ejs") %>

    <h1> <%= title %></h1>

    <p><%= __("Tienda de productos de segunda mano") %></p>

    <div class="container">
      <% results.forEach(function(product) { %>
        <div class="item">
          <div class="item_name"><%= product.name %></div>
          <%= product.sales  === true ? __("Venta") : __("Busco")%>
          <div class="item_price"><%= __("Precio:") %> <%= product.price %>â‚¬</div>
          <img src="/thumbnails/<%=product.photo %>" alt="<%= product.name %>">
          <p><%= __("Tags:") %> <%= product.tags.join(', ') %></p>
        </div>
      <% }); %>
    
      <% if (results.length === 0) { %>
        <p><%= __("No hay productos") %></p>
      <% } %>
    </div>
    
  </body>
  
  </body>
  </html>
